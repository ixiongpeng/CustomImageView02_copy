<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.xiongpeng.customimageview02"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xiongpeng.customimageview02.MainActivity">




    <com.example.xiongpeng.customimageview02.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:titleText="hell android"
        custom:imageScaleType="center"
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="30sp"
        custom:image="@mipmap/ic_launcher"/>

    <com.example.xiongpeng.customimageview02.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:titleText="hell world"
        custom:titleTextColor="#00ff00"
        custom:imageScaleType="center"
        custom:titleTextSize="30sp"
        custom:image="@mipmap/ic_launcher"/>

    <com.example.xiongpeng.customimageview02.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:titleText="meizi~"
        custom:titleTextColor="#ff0000"
        custom:titleTextSize="30sp"
        custom:imageScaleType="center"
        custom:image="@mipmap/ic_launcher"/>
</LinearLayout>
